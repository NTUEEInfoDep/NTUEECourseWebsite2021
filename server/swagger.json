{
  "openapi": "3.0.0",
  "info": {
    "title": "NTUEE course website",
    "version": "1.0.0",
    "description": "NTUEE course website api"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "local environment"
    }
  ],
  "paths": {
    "/session": {
      "get": {
        "description": "Login",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userID": {
                      "type": "string",
                      "example": "B12345678"
                    },
                    "authority": {
                      "type": "string",
                      "example": "User"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Haven't login"
          }
        }
      },
      "post": {
        "description": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "userID": {
                    "type": "string",
                    "example": "B00000000"
                  },
                  "password": {
                    "type": "string",
                    "example": "1111"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Failed"
          },
          "401": {
            "description": "Wrong password"
          },
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userID": {
                      "type": "string",
                      "example": "B12345678"
                    },
                    "authority": {
                      "type": "string",
                      "example": "User"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Log out",
        "responses": {
          "204": {
            "description": "Success"
          }
        }
      }
    },
    "/opentime": {
      "put": {
        "description": "Change open time",
        "requestBody": {
          "description": "Enter Unix timestamp",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "start": {
                    "type": "number",
                    "example": 1600000000
                  },
                  "end": {
                    "type": "number",
                    "example": 1700000000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "403": {
            "description": "Forbidden"
          },
          "400": {
            "description": "Format error"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/courses": {
      "get": {
        "description": "Get all courses",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "name",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1"]
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "type",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1"]
            }
          },
          {
            "name": "description",
            "in": "query",
            "description": "description",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [{ "id": "course1" }, { "id": "course2" }]
                }
              }
            }
          },
          "403": {
            "description": "Forbidden"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/users": {
      "get": {
        "description": "Get all users with query parameters",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "name",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1"]
            }
          },
          {
            "name": "grade",
            "in": "query",
            "description": "grade",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1"]
            }
          },
          {
            "name": "authority",
            "in": "query",
            "description": "authority",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id(default)": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "grade": {
                        "type": "number"
                      },
                      "authority": {
                        "type": "number"
                      }
                    }
                  },
                  "example": "api/users/id?name?grade?authority"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      },
      "post": {
        "description": "Add new users",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "properties": {
                  "userID": {
                    "type": "string"
                  },
                  "grade": {
                    "type": "number"
                  },
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "authority": {
                    "type": "number"
                  }
                },
                "example": [
                  {
                    "userID": "b787",
                    "grade": 2,
                    "password": "1111",
                    "name": "A",
                    "authority": 2
                  },
                  {
                    "userID": "b1338",
                    "grade": 3,
                    "password": "1111",
                    "name": "B",
                    "authority": 1
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "403": {
            "description": "Forbidden"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      },
      "delete": {
        "description": "Delete particular users",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "properties": {
                  "userID": {
                    "type": "string"
                  }
                },
                "example": ["b9213849", "b1432797"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "403": {
            "description": "Forbidden"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/password": {
      "put": {
        "description": "Change password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "userID": {
                      "type": "string"
                    },
                    "new_password": {
                      "type": "string"
                    }
                  }
                },
                "example": [
                  { "userID": "B33333333", "new_password": "2222" },
                  { "userID": "B44444444", "new_password": "2222" }
                ]
              },
              "encoding": {
                "options": {
                  "style": "form",
                  "explode": true
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "401": {
            "description": "Failed"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/course": {
      "post": {
        "description": "Add new course",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "options": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "example": [
                  {
                    "id": "test",
                    "name": "course_name",
                    "type": "0",
                    "description": "this is a tested course",
                    "options": ["Teacher A", "Teacher B"]
                  },
                  {
                    "id": "test_course",
                    "name": "course",
                    "type": "2",
                    "description": "this is another tested course",
                    "options": ["Teacher B", "Teacher C"]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success"
          },
          "400": {
            "description": "The course has already existed"
          },
          "403": {
            "description": "Forbidden"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      },
      "delete": {
        "description": "Delete course",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["test", "test_course"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not found"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      },
      "put": {
        "description": "Change th content of the course",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "options": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "example": [
                  {
                    "id": "test",
                    "name": "new_course_name",
                    "type": "4",
                    "description": "this is a modified tested course",
                    "options": ["Teacher A", "Teacher B", "Teacher E"]
                  },
                  {
                    "id": "test_course",
                    "name": "course",
                    "type": "2",
                    "description": "this is another modified tested course",
                    "options": ["Teacher B", "Teacher C"]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not found"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/distribute": {
      "post": {
        "description": "Run distribution(X)",
        "deprecated": true,
        "responses": {
          "201": {
            "description": "Success"
          }
        }
      }
    },
    "/authority": {
      "put": {
        "description": "Change someone's authority",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "userID": {
                      "type": "string",
                      "example": "B33333333"
                    },
                    "authority": {
                      "type": "number",
                      "example": 1
                    }
                  }
                },
                "example": [
                  {
                    "userID": "B33333333",
                    "authority": 1
                  },
                  {
                    "userID": "B22222222",
                    "authority": 0
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not found"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/selections/{courseID}": {
      "get": {
        "description": "Show the status of a course's selection",
        "parameters": [
          {
            "name": "courseID",
            "in": "path",
            "description": "ID of a course",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Ten-Select-Two"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "十選二實驗"
                    },
                    "type": {
                      "type": "string",
                      "example": "0"
                    },
                    "description": {
                      "type": "string",
                      "example": "description of a course"
                    },
                    "selected": {
                      "type": "array",
                      "example": ["course1", "course2"]
                    },
                    "unselected": {
                      "type": "array",
                      "example": ["course3", "course4"]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Fail"
          },
          "404": {
            "description": "Not found"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      },
      "put": {
        "description": "Show the status of a course's selection",
        "parameters": [
          {
            "name": "courseID",
            "in": "path",
            "description": "ID of a course",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Ten-Select-Two"
            }
          }
        ],
        "requestBody": {
          "description": "Update the selection of a course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["電力電子", "半導體", "嵌入式系統"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success"
          },
          "400": {
            "description": "Format error"
          },
          "403": {
            "description": "Fail"
          },
          "404": {
            "description": "Not found"
          },
          "503": {
            "$ref": "#/components/responses/503"
          }
        }
      }
    },
    "/result.csv": {
      "get": {
        "description": "get distribution result",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/csv": {
                "schema": {
                  "type": "string",
                  "example": "studentID,courseName,optionName\nB00000000,電路學,老師A\nB11111111,機率與統計,老師H"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "503": {
        "description": "Service close",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "number",
                  "example": 1600000000
                },
                "end": {
                  "type": "number",
                  "example": 1700000000
                }
              }
            }
          }
        }
      }
    }
  }
}
